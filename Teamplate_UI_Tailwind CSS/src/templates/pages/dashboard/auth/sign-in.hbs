{{#extend 'layouts/dashboard/simple' title="signin" active="auth-sign-in" path="../../" }}
    {{#content "content"}}
    <section class="block">
      <div class="flex flex-wrap m-0 items-center bg-white h-screen">
        <div class="md:w-1/2 w-full flex-auto">
          <div class="flex flex-wrap justify-center">
            <div class="flex-auto md:px-6 px-4 dark:bg-dark-card">
              <div class=" relative flex flex-col overflow-hidden bg-white rounded-lg  card-transparent shadow-none xl:px-16 justify-center mb-0 dark:bg-dark-card">
                
                <div class="flex-auto p-8">
                  <a href="{{path}}dashboard/index.html" class="py-1 text-xl whitespace-nowrap  mr-4 flex items-center mb-4">
                    {{> partials/components/logo }}
                    <h4 class="text-2xl ml-2 font-medium dark:text-gray-600">{{ appName }}</h4>
                  </a>
                  <h2 class="mb-2 text-4xl font-medium text-center dark:text-gray-600">Sign In</h2>
                  <p class="text-center mb-4 text-gray-600">Login to stay connected.</p>
                  <form>
                    <div class="flex flex-wrap">
                      <div class="flex-auto w-full mb-4">
                          <label for="email" class="mb-2 inline-block text-gray-600 ">Email</label>
                          <input type="email" class="block w-full  py-2 px-4 bg-white rounded border outline-none focus:border-blue-500 focus:shadow dark:bg-dark-card" id="email" aria-describedby="email">
                      </div>
                      <div class="flex-auto w-full mb-4">
                          <label for="password" class="mb-2 inline-block text-gray-600">Password</label>
                          <input type="password" class="block w-full  py-2 px-4 bg-white border rounded outline-none focus:border-blue-500 focus:shadow dark:bg-dark-card" id="password" aria-describedby="password">
                      </div>
                      <div class="flex-auto w-full flex justify-between">
                        <div class="block pl-6 mb-4">
                          <input type="checkbox" class="rounded -ml-6 mt-1 bg-no-repeat bg-center w-4 h-4 border border-blue-500 float-left dark:bg-dark-card" id="customCheck1">
                          <label class="form-check-label text-gray-600" for="customCheck1">Remember Me</label>
                        </div>
                        <a href="recoverpw.html" class="text-blue-500 hover:text-blue-600">Forgot Password?</a>
                      </div>
                    </div>
                    <div class="flex justify-center">
                      <button type="submit" class="inline-block p-2 px-6 py-2 text-center text-white transition-all duration-500 ease-in-out bg-blue-500 border border-blue-500 rounded shadow-md hover:shadow-md hover:bg-blue-600 hover:text-white">Sign In</button>
                    </div>
                    <p class="text-center my-4 text-gray-600">or sign in with other accounts?</p>
                    <div class="flex justify-center">
                      <ul class="flex ">
                        <li class="relative block px-4 py-2 bg-white  text-black border-0 pb-0 dark:bg-dark-card">
                          <a href="#"><img src="{{path}}assets/images/brands/fb.svg" alt="fb"></a>
                        </li>
                        <li class="relative block px-4 py-2 bg-white  text-black border-0 pb-0 dark:bg-dark-card">
                          <a href="#"><img src="{{path}}assets/images/brands/gm.svg" alt="gm"></a>
                        </li>
                        <li class="relative block px-4 py-2 bg-white  text-black border-0 pb-0 dark:bg-dark-card">
                          <a href="#"><img src="{{path}}assets/images/brands/im.svg" alt="im"></a>
                        </li>
                        <li class="relative block px-4 py-2 bg-white  text-black border-0 pb-0 dark:bg-dark-card">
                          <a href="#"><img src="{{path}}assets/images/brands/li.svg" alt="li"></a>
                        </li>
                      </ul>
                    </div>
                    <p class="mt-4 mb-4 text-center text-gray-600">
                      Donâ€™t have an account? <a href="sign-up.html" class="text-blue-500 hover:text-blue-600">Click here to sign up.</a>
                    </p>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="absolute left-0 top-0">
            <svg width="280" height="230" viewBox="0 0 431 398" fill="none" xmlns="http://www.w3.org/2000/svg">
              <g opacity="0.05">
              <rect x="-157.085" y="193.773" width="543" height="77.5714" rx="38.7857" transform="rotate(-45 -157.085 193.773)" fill="#3B8AFF"/>
              <rect x="7.46875" y="358.327" width="543" height="77.5714" rx="38.7857" transform="rotate(-45 7.46875 358.327)" fill="#3B8AFF"/>
              <rect x="61.9355" y="138.545" width="310.286" height="77.5714" rx="38.7857" transform="rotate(45 61.9355 138.545)" fill="#3B8AFF"/>
              <rect x="62.3154" y="-190.173" width="543" height="77.5714" rx="38.7857" transform="rotate(45 62.3154 -190.173)" fill="#3B8AFF"/>
              </g>
            </svg>
          </div>
        </div>
        <div class=" flex-auto w-2/4 md:block hidden bg-blue-500 p-0 -mt-1 h-screen overflow-hidden">
          <img src="{{path}}assets/images/auth/01.png" class="h-full w-full object-cover" alt="images">
        </div>
      </div>
    </section>
    {{> partials/components/setting-button}}
  {{/content}}
{{/extend}}
