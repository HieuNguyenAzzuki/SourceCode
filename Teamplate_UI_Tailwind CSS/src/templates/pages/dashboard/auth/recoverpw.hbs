
{{#extend 'layouts/dashboard/simple' title="password-recover" active="auth-recoverpw" path="../../" }}
    {{#content "content"}}
      <section class="block">
        <div class="flex flex-wrap m-0 items-center bg-white h-screen dark:bg-dark-card">
          <div class="flex-auto w-2/4 md:block hidden bg-blue-500 p-0 -mt-1 h-screen overflow-hidden">
            <img src="{{path}}assets/images/auth/02.png" class="animated-scaleX h-full w-full object-cover" alt="images">
          </div>
          <div class="md:w-2/4 w-full flex-auto p-0 dark:bg-dark-card">
            <div class="relative flex flex-col overflow-hidden bg-white rounded-lg  card-transparent shadow-none xl:px-24 justify-center mb-0 dark:bg-dark-card">
              <div class="flex-auto p-6">
                <a href="{{path}}dashboard/index.html" class="py-1 text-xl whitespace-nowrap mr-4 flex items-center mb-4">
                  {{> partials/components/logo }}
                  <h4 class="text-2xl ml-4 font-medium dark:text-gray-500">{{ appName }}</h4>
                </a>
                <h2 class="mb-2 text-3xl font-medium mt-42 dark:text-gray-500">Reset Password</h2>
                <p class="mb-4 text-gray-600">Enter your email address and we'll send you an email with instructions to reset your password.</p>
                <form>
                  <div class="flex flex-wrap">
                    <div class="flex-auto w-full mb-4">
                        <label for="email" class="mb-2 inline-block text-gray-600">Email</label>
                        <input type="email" class="block w-full  py-2 px-4 bg-white border dark:border-gray-500 rounded dark:bg-dark-card" id="email" aria-describedby="email">
                    </div>
                  </div>
                  <button type="submit" class="inline-block p-2 px-6 py-2 text-center text-white  transition-all duration-500 ease-in-out bg-blue-500 border border-blue-500 rounded shadow-md hover:shadow-md hover:bg-blue-600 hover:text-white">Reset</button>
                </form>
              </div>
            </div>
            <div class="absolute right-0 top-0">
              <svg width="280" height="230" viewBox="0 0 431 398" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <g opacity="0.05">
                  <rect x="-157.085" y="193.773" width="543" height="77.5714" rx="38.7857" transform="rotate(-45 -157.085 193.773)" fill="#3B8AFF"/>
                  <rect x="7.46875" y="358.327" width="543" height="77.5714" rx="38.7857" transform="rotate(-45 7.46875 358.327)" fill="#3B8AFF"/>
                  <rect x="61.9355" y="138.545" width="310.286" height="77.5714" rx="38.7857" transform="rotate(45 61.9355 138.545)" fill="#3B8AFF"/>
                  <rect x="62.3154" y="-190.173" width="543" height="77.5714" rx="38.7857" transform="rotate(45 62.3154 -190.173)" fill="#3B8AFF"/>
                  </g>
              </svg>
            </div>
          </div>
        </div>
      </section>
      {{> partials/components/setting-button}}
   {{/content}}
{{/extend}}
