{{#extend 'layouts/dashboard/simple' title="signup" active="auth-sign-up" path="../../" }}
    {{#content "content"}}
    <section class="block">
      <div class="flex flex-wrap m-0 items-center bg-white h-screen dark:bg-dark-card">
        <div class="flex-auto w-2/4 md:block hidden bg-blue-500 p-0 -mt-1 h-screen overflow-hidden">
          <img src="{{path}}assets/images/auth/05.png" class="animated-scaleX h-full w-full object-cover" alt="images">
        </div>
        <div class="md:w-2/4 w-full flex-auto">
          <div class="flex flex-wrap justify-center">
            <div class="flex-auto md:px-10 px-4 dark:bg-dark-card">
              <div class=" relative flex flex-col overflow-hidden bg-white rounded-lg  card-transparent shadow-none xl:px-20 justify-center mb-0 dark:bg-dark-card">
                <div class="flex-auto p-4">
                  <a href="{{path}}dashboard/index.html" class="py-1 text-xl whitespace-nowrap mr-4 flex items-center mb-4">
                    {{> partials/components/logo }}
                    <h4 class="text-2xl ml-4 font-medium dark:text-gray-500">{{ appName }}</h4>
                  </a>
                  <h2 class="mb-2 text-4xl font-medium text-center dark:text-gray-500">Sign Up</h2>
                  <p class="text-center mb-4 text-gray-600">Create your {{appName}} account.</p>
                  <form>
                    <div class="flex flex-wrap">
                      <div class="flex-auto lg:w-2/4 w-full px-4 mb-4">
                          <label for="full-name" class="mb-2 inline-block text-gray-600">Full Name</label>
                          <input type="text" class="block w-full  py-2 px-4  bg-white dark:bg-dark-card border dark:border-gray-600 rounded outline-none focus:border-blue-500 focus:shadow" id="full-name">
                      </div>
                      <div class="flex-auto w-full lg:w-2/4 px-4 mb-4">
                          <label for="last-name" class="mb-2 inline-block text-gray-600">Last Name</label>
                          <input type="text" class="block w-full  py-2 px-4  bg-white dark:bg-dark-card border dark:border-gray-600 rounded outline-none focus:border-blue-500 focus:shadow" id="last-name">
                      </div>
                      <div class="flex-auto w-full lg:w-2/4 px-4 mb-4">
                          <label for="email" class="mb-2 inline-block text-gray-600">Email</label>
                          <input type="email" class="block w-full  py-2 px-4  bg-white dark:bg-dark-card border dark:border-gray-600 rounded outline-none focus:border-blue-500 focus:shadow" id="email">
                      </div>
                      <div class="flex-auto w-full lg:w-2/4 px-4 mb-4">
                          <label for="phone" class="mb-2 inline-block text-gray-600">Phone No.</label>
                          <input type="text" class="block w-full  py-2 px-4  bg-white dark:bg-dark-card border dark:border-gray-600 rounded outline-none focus:border-blue-500 focus:shadow " id="phone">
                      </div>
                      <div class="flex-auto w-full lg:w-2/4 px-4 mb-4">
                          <label for="password" class="mb-2 inline-block text-gray-600">Password</label>
                          <input type="password" class="block w-full  py-2 px-4  bg-white dark:bg-dark-card border dark:border-gray-600 rounded outline-none focus:border-blue-500 focus:shadow" id="password">
                      </div>
                      <div class="flex-auto w-full lg:w-2/4 px-4 mb-4">
                          <label for="confirm-password" class="mb-2 inline-block text-gray-600">Confirm Password</label>
                          <input type="text" class="block w-full  py-2 px-4  bg-white dark:bg-dark-card border dark:border-gray-600 rounded outline-none focus:border-blue-500 focus:shadow" id="confirm-password">
                      </div>
                      <div class="flex-auto w-full flex justify-center mb-3">
                          <input type="checkbox" class="rounded -ml-6 mt-1 bg-no-repeat bg-center w-4 h-4 border dark:border-gray-600 border-blue-500 float-left dark:bg-dark-card" id="customCheck1">
                          <label class="form-check-label text-gray-600 pl-2" for="customCheck1">I agree with the terms of use</label>
                      </div>
                    </div>
                    <div class="flex justify-center">
                      <button type="submit" class="inline-block p-2 px-6 py-2  text-center text-white  transition-all duration-500 ease-in-out bg-blue-500 border border-blue-500 rounded shadow-md hover:shadow-md hover:bg-blue-600 hover:text-white">Sign Up</button>
                    </div>
                    <p class="text-center my-4 text-gray-600">or sign in with other accounts?</p>
                    <div class="flex justify-center">
                      <ul class="flex">
                        <li class="relative block px-4 py-2 bg-white  text-black border-0 pb-0 dark:bg-dark-card">
                          <a href="#"><img src="{{path}}assets/images/brands/fb.svg" alt="fb"></a>
                        </li>
                        <li class="relative block px-4 py-2 bg-white  text-black border-0 pb-0 dark:bg-dark-card">
                          <a href="#"><img src="{{path}}assets/images/brands/gm.svg" alt="gm"></a>
                        </li>
                        <li class="relative block px-4 py-2 bg-white  text-black border-0 pb-0 dark:bg-dark-card">
                          <a href="#"><img src="{{path}}assets/images/brands/im.svg" alt="im"></a>
                        </li>
                        <li class="relative block px-4 py-2 bg-white  text-black border-0 pb-0 dark:bg-dark-card">
                          <a href="#"><img src="{{path}}assets/images/brands/li.svg" alt="li"></a>
                        </li>
                      </ul>
                    </div>
                    <p class="mt-4 mb-4 text-center text-gray-600">
                      Already have an Account <a href="sign-in.html" class="text-underline text-blue-500 hover:text-blue-600">Sign In</a>
                    </p>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="absolute right-0 top-0">
            <svg width="280" height="230" viewBox="0 0 421 359" fill="none" xmlns="http://www.w3.org/2000/svg">
              <g opacity="0.05">
                <rect x="-15.0845" y="154.773" width="543" height="77.5714" rx="38.7857" transform="rotate(-45 -15.0845 154.773)" fill="#3A57E8"/>
                <rect x="149.47" y="319.328" width="543" height="77.5714" rx="38.7857" transform="rotate(-45 149.47 319.328)" fill="#3A57E8"/>
                <rect x="203.936" y="99.543" width="310.286" height="77.5714" rx="38.7857" transform="rotate(45 203.936 99.543)" fill="#3A57E8"/>
                <rect x="204.316" y="-229.172" width="543" height="77.5714" rx="38.7857" transform="rotate(45 204.316 -229.172)" fill="#3A57E8"/>
              </g>
            </svg>
          </div>
        </div>
      </div>
    </section>
    {{> partials/components/setting-button}}
  {{/content}}
{{/extend}}
