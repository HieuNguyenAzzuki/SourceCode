
{{#extend 'layouts/dashboard/simple' title="confirm-mail" active="auth-confirm-mail" path="../../" }}
    {{#content "content"}}
      <section class="block">
        <div class="flex flex-wrap m-0 items-center bg-white h-screen dark:bg-dark-card">
          <div class="md:w-2/4 w-full flex-auto p-0 dark:bg-dark-card">
            <div class="relative flex flex-col overflow-hidden bg-white rounded-lg  card-transparent shadow-none xl:px-24 justify-center mb-0 dark:bg-dark-card">
              <div class="flex-auto p-6 ">
                <a href="{{path}}dashboard/index.html" class="py-1 text-xl whitespace-nowrap mr-4 flex items-center mb-10">
                    {{> partials/components/logo }}
                    <h4 class="text-3xl ml-4 font-medium dark:text-gray-500">{{ appName }}</h4>
                </a>
                <img src="{{path}}assets/images/auth/mail.png" class="img-fluid" width="80" alt="">
                <h2 class="mb-0 text-4xl font-medium mt-4 dark:text-gray-500">Success !</h2>
                <p class="mb-1 text-gray-600">A email has been send to youremail@domain.com. Please check for an
                    email from company and click
                    on the included link to reset your password.</p>
                <div class="inline-block w-full">
                  <a href="{{path}}dashboard/index.html" class="inline-block p-2 px-6 py-2 text-center text-white transition-all duration-500 ease-in-out bg-blue-500 border border-blue-500 rounded shadow-md hover:shadow-md hover:bg-blue-600 hover:text-white mt-4">Back to Home</a>
                </div>
              </div>
            </div>
          </div>
          <div class="flex-auto w-2/4 md:block hidden bg-blue-500 p-0 -mt-1 h-screen overflow-hidden">
            <img src="{{path}}assets/images/auth/03.png" class="animated-scaleX h-full w-full object-cover" alt="images">
          </div>
        </div>
      </section>
    {{> partials/components/setting-button}}
   {{/content}}
{{/extend}}
